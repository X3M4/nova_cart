    <!-- Form view for model project.task.line-->
    <record id="project_task_line__form_view" model="ir.ui.view">
        <field name="name">project.task.line.form.view</field>
        <field name="model">project.task.line</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='general_information']" position="after">
                <page name="task_lines" string="Task lines">
                    <group name="task_lines" string="Task Lines">
                        <field name="project_task_line_ids" widget="one2many_list">
                            <tree string="Task Lines" editable="bottom">
                                <field name="name"/>
                                <field name="description"/>
                                <field name="objective"/>
                                <field name="unit"/>
                                <field name="time_x_hour"/>
                                <field name="workers"/>
                                <field name="receptor"/>
                                <field name="price"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    
    </record>

    


    <record id="project_task_line_action" model="ir.actions.act_window">
        <field name="name">Project Task Line</field>
        <field name="res_model">project.task.line</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new project task line.
            </p>
        </field>
    </record>

    <menuitem id="menu_project_task_line"
              name="Project Task Lines"
              parent="product.product_menu_catalog"
              action="project_task_line_action"
              sequence="9"/>
</odoo>
